.random-app-widget
  margin: 2em 0
  padding: 1.5em
  background: #f8f9fa
  border-radius: 12px
  box-shadow: 0 2px 8px rgba(0,0,0,0.05)
  
  h3
    margin: 0 0 1em
    color: #333
    font-size: 1.2em
  
  .app-info
    display: flex
    align-items: flex-start
    
  .app-icon
    width: 80px
    height: 80px
    border-radius: 16px
    margin-right: 1.5em
    box-shadow: 0 4px 8px rgba(0,0,0,0.1)
    
  .app-details
    flex: 1
    
  .app-name
    margin: 0 0 0.5em
    font-size: 1.1em
    color: #000
    
  .app-rating
    margin: 0.5em 0
    display: flex
    align-items: center
    
    .stars
      color: #ff9500
      letter-spacing: 2px
      margin-right: 0.5em
      font-size: 1.1em
    
    .rating-value
      font-weight: bold
      margin-right: 0.5em
      color: #333
    
    .rating-count
      color: #666
      font-size: 0.9em
    
  .app-description
    margin: 0.8em 0
    color: #666
    font-size: 0.95em
    line-height: 1.5
    
  .app-link
    display: inline-block
    padding: 0.6em 1.2em
    background: #007AFF
    color: white
    text-decoration: none
    border-radius: 8px
    font-size: 0.9em
    transition: background 0.2s ease
    
    &:hover
      background: #0056b3
